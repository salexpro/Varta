#login.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel')
    .modal-dialog.modal-lg(role='document')
        form(action='profile.html')
            .modal-content
                .modal-header.text-center
                    button.close(type='button', data-dismiss='modal', aria-label='Закрыть')
                        span.fixi-reg(aria-hidden='true') x
                    h4.modal-title.fixi-reg вход в личный кабинет
                .modal-body
                    .row.modal_social
                        .col-md-12.text-center.bebasneue-reg
                            span Войти через:
                            a(href='#')
                                img(src='img/vk_white.png', alt='')
                            a(href='#')
                                img(src='img/fb_white.png', alt='')
                            a(href='#')
                                img(src='img/ok_white.png', alt='')
                    .modal_form
                        label.bebasneue-reg(for='auth_email') Email:
                        input#auth_email.bebasneue-reg(type='email', placeholder='Укажите Email')
                        label.bebasneue-reg(for='auth_password') Пароль:
                        input#auth_password.bebasneue-reg(type='password', placeholder='******')
                        .modal_form_footer
                            a.bebasneue-reg(data-dismiss='modal', data-toggle='modal', data-target='#forgot', href='#') забыли пароль?
                            input#remember_me.white(type='checkbox')
                            label.bebasneue-reg(for='remember_me') запомнить
                .modal-footer
                    button.fixi-button.white(type='submit')
                        span войти

#forgot.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header.text-center
                button.close(type='button', data-dismiss='modal', aria-label='Закрыть')
                    span.fixi-reg(aria-hidden='true') x
                h4.modal-title.fixi-reg восстановление пароля
            .modal-body
                .row
                    .col-md-4.col-md-offset-4
                        label.bebasneue-reg(for='auth_email') Email:
                        input#auth_email.bebasneue-reg(type='email', placeholder='Укажите Email')
            .modal-footer
                button.fixi-button.white
                    span отправить пароль

#notice.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header.text-center
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span.fixi-reg(aria-hidden='true') x
                h4.modal-title.fixi-reg ураа!
            .modal-body
                .row
                    .col-md-8.col-md-offset-2.text-center.bebasneue-reg
                        | Поздравляем!
                        br
                        |  Вы выиграли гироскутер.
                        br
                        | Для получения приза необходимо дозаполнить
                        br
                        | данные в личном кабинете.
            .modal-footer
                button.fixi-button.white(type='submit')
                    span дрыц-тыц!